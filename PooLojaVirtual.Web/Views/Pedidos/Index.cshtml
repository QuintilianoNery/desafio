@model IEnumerable<Pedido>

@{
    ViewData["Title"] = "Pedidos";
}

<h4 class="text-center">Pedidos</h4>

<div class="container">
    <table class="table table-hover table-condensed">
        <thead>
        <tr>
            <th>#</th>
            <th>Data</th>
            <th>Valor</th>
            <th>Forma de pagamento</th>
        </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td data-th="#">
                        @item.Id
                    </td>
                    <td data-th="Data">
                        @item.Data
                    </td>
                    <td data-th="Valor">
                        $@item.Valor
                    </td>
                    <td data-th="Forma de pagamento">
                        @item.FormaPagamento.Nome
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>